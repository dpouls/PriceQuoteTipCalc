@model PriceQuoteModel

@{
    ViewBag.Title = "Price Quotation";
}


<h1> Price Quotation</h1>
<form asp-action="Index" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Subtotal">Subtotal:</label>
        <input asp-for="Subtotal" />
    </div>
    <div>
        <label asp-for="DiscountPercent">Discount Percent: </label>
        <input asp-for="DiscountPercent" />
    </div>
    <div>
        <label>Discount Amount:</label>
        <label>@ViewBag.DiscountAmount.ToString("C2")</label>
    </div>
    <div>
        <label>Total:</label>
        <label>@ViewBag.Total.ToString("C2")</label>
    </div>
    <button type="submit">
        Calculate
    </button>
    <a asp-action="Index">Clear</a>
</form>
